{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "UserName",
                              "name": "UserNameLabel",
                              "style": {
                                "textAlign": "right",
                                "width": "100%"
                              },
                              "text": "Benutzername",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "disabled": false,
                              "name": "UserName",
                              "placeholder": "",
                              "style": {
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${benutzer.UserName}"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Email",
                              "name": "EmailLabel",
                              "style": {
                                "width": "100%"
                              },
                              "text": "E-Mail",
                              "type": "label"
                            }
                          ],
                          "style": {
                            "textAlign": "right"
                          },
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Email",
                              "placeholder": "",
                              "style": {
                                "width": "100%"
                              },
                              "type": "textbox",
                              "value": "${benutzer.Email}"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Speichern",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              },
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Abbruch",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "textAlign": "right"
                      },
                      "type": "row"
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "Benutzer konnte nicht aktualisiert werden!",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.updateUser",
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${parameters.Id}"
                          },
                          {
                            "name": "User",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "name": "form0",
                  "type": "template-form"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "dbSinDarEla.getVwBenutzerAnus",
        "parameters": [
          {
            "name": "$filter",
            "value": "Id eq '${parameters.Id}'"
          }
        ],
        "then": [
          {
            "name": "benutzer",
            "type": "set",
            "value": "${result.value[0]}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "BenutzerBearbeitenBenutzername"
}