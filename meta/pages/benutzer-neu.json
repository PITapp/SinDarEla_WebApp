                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "RoleNames",
                              "name": "RoleNamesLabel",
                              "style": {
                                "textAlign": "right",
                                "width": "100%"
                              },
                              "text": "Rolen",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${rstRoles}",
                              "emptyFilterText": "No results found",
                              "multiple": true,
                              "multipleItemsSelectedText": "{0} items selected",
                              "name": "RoleNames",
                              "style": {
                                "width": "100%"
                              },
                              "textProperty": "Name",
                              "type": "dropdown",
                              "valueProperty": "Name"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Password",
                              "name": "PasswordLabel",
                              "style": {
                                "textAlign": "right",
                                "width": "100%"
                              },
                              "text": "Passwort",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Password",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password"
                            },
                            {
                              "component": "Password",
                              "name": "PasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Passwort erforderlich",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "ConfirmPassword",
                              "name": "ConfirmPasswordLabel",
                              "style": {
                                "textAlign": "right",
                                "width": "100%"
                              },
                              "text": "Wiederholen",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "ConfirmPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password"
                            },
                            {
                              "component": "ConfirmPassword",
                              "name": "ConfirmPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Passwort wiederholen erforderlich",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Speichern",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              },
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Abbruch",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "textAlign": "right"
                      },
                      "type": "row"
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "Neuanlage Benutzer nicht m√∂glich",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.createUser",
                        "parameters": [
                          {
                            "name": "User",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "name": "form0",
                  "type": "template-form"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Security.getRoles",
        "then": [
          {
            "name": "rstRoles",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "BenutzerNeu"
}